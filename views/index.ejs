<div class="container">
    <header class="jumbotron">   
        <h1>Welcome to YelpCamp!!!</h1>
        <p>View our amazing campgrounds from all over the world</p>   
        <a class="btn btn-info btn-large"href="/campgrounds/new">Add new campground</a> 
    </header>

    <div class="row text-center">
        
<%campgrounds.forEach(function(camp){%>

    <div class="col-lg-3 col-md-4 col-sm-6">
        <!-- <div class="img-thumbnail">
            <img src="<%=camp.image%>" alt="">
