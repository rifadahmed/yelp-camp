    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/campgrounds">YelpCamp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="nav navbar-nav ml-auto">
        <%if(!currentUser){%>

        <li class="nav-item active">
          <a class="nav-link" href="/login">Login <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="register">Sign-up <span class="sr-only">(current)</span></a>
        </li>
        <%}
                else
                {%>
        <li class="nav-item active">
          <a class="nav-link" href="#"> Logged in as, <%=currentUser.username%> <span
              class="sr-only">(current)</span></a>



        <li class="nav-item active">
          <a class="nav-link" href="/logout">logout <span class="sr-only">(current)</span></a>
        </li>

        <%}%>
            </div>
          </nav>
          
          <div class="container">
           <% if(logout && logout.length>0){%>
        
          <div class="alert alert-danger" role="alert">
            <%=logout%>
          </div>
       
        <%}
          else if(loginFirst && loginFirst.length>0)
          {%>
        <div class="alert alert-warning" role="alert">
                 <%=loginFirst%>
          </div>
       
        <%}
        else if(userExist && userExist.length>0)
        {%>
      <div class="alert alert-warning" role="alert">
               <%=userExist%>
        </div>

      <%}

      else if(campUpdated && campUpdated.length>0)
      {%>
    <div class="alert alert-success" role="alert">
             <%=campUpdated%>
      </div>

    <%}
    else if(campDeleted && campDeleted.length>0)
    {%>
  <div class="alert alert-success" role="alert">
           <%=campDeleted%>
    </div>

  <%}

  else if(commentAdded && commentAdded.length>0)
  {%>
<div class="alert alert-success" role="alert">
         <%=commentAdded%>
  </div>

<%}
else if(commentUpdated && commentUpdated.length>0)
  {%>
<div class="alert alert-success" role="alert">
         <%=commentUpdated%>
  </div>

<%}
else if(commentDeleted && commentDeleted.length>0)
  {%>
<div class="alert alert-success" role="alert">
         <%=commentDeleted%>
  </div>

<%}%>




      </div> 
            
         
          
    